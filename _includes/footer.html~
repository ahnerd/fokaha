	<script>

	    $('#grid').mediaBoxes({
	    	filterContainer: '#filter',
	    	search: '#search',
	    	boxesToLoadStart: 8,
	    	boxesToLoad: 5,
	    	horizontalSpaceBetweenBoxes: 20,
        	verticalSpaceBetweenBoxes: 20,
	    }); 

	    $('#grid2').mediaBoxes({
	    	filterContainer: '#filter2',
	    	sortContainer: '#sort',
	    	getSortData: {
	          title: '.media-box-title',
	          year: '.media-box-year parseInt',
	          author: '.media-box-author'
	        },
	    	horizontalSpaceBetweenBoxes: 20,
        	verticalSpaceBetweenBoxes: 20,
	    }); 

	    $('#grid3').mediaBoxes({
	    	filterContainer: '#filter3',
	    	search: '#search2',
